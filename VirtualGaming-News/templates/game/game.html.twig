            <div class="name">
                <h3>{{game.name}}</h3>
            </div>
        </div>
        
        <!-- La carte d'information utilisateur -->
        <div class="bloc-middle">
            <div>
                <ul class="ul-cat">
                    <li>{{category.name}}</li>
                    <li>{{category.name}}</li>
                    <li>{{category.name}}</li>
                </ul>
            </div>
           
        </div>
        
            <h4></h4>
        <!-- La carte d'information utilisateur -->
        <div class="bloc-bot">
            <div class="sm-bloc-left">
                <div class="price">
                    <p>Prix: {{game.price}} €</p> 
                    {# link une images #}
                    {# <img src="{{ asset('images/' ~ game.picture) }}"/> #}
                </div>
                <div class="description-game">
                    <p class="p-desc"> {{game.description}} Lorem, ipsum 
                    dolor sit amet consectetur 
                    adipisicing elit. Cumque quam 
                    optio minus perspiciatis 

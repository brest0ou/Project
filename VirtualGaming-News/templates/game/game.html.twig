        <div class="bloc-top">
            <img class="backgrd-img" src="{{asset('/images/' ~ game.picture)}}" alt="#">
            <div class="cont-logo">
                <img class="logo-game" src="{{ asset('/images/' ~ user.picture) }}"/>

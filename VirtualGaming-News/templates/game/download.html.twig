{% extends 'base.html.twig' %}

{% block title %}Téléchargement - {{ parent() }}{% endblock %}

{% block body %}
    <main class="container_download" style="margin-top:100px; margin-bottom:100px; color: white; text-align:center;">
    
        <h1>Ajouter un jeu</h1>

        {{ form_start(form) }}

            {{ form_row(form.name) }}
            {{ form_row(form.description) }}

        <div class="form-aligned">
            {{ form_row(form.picture) }}
            {{ form_row(form.duration) }}
        </div>

        <div class="form-aligned">
            {{ form_row(form.price) }}
            {{ form_row(form.totalWeight) }}
        </div>

        <div class="form-aligned">
            
            {{ form_row(form.develop) }}
            {{ form_row(form.users) }}
            {{ form_row(form.status) }}
        </div>

            {{ form_row(form.gamesCategory) }}

        <div class="form-end">
            <button class="button">Ajouter</button>
        </div>

        {{ form_end(form) }}

    </main>
{% endblock %}



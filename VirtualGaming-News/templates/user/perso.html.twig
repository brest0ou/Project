{% extends 'base.html.twig' %}

{% block title %} Page Personnel - {{ parent() }}{% endblock %}

{% block body %}

<!-- La carte d'information utilisateur -->
<main class="main-perso">
    <section class="bloc-section">   
        <div class="container-card ">
            <div class="card-perso">
                <div>
                    <img class="img-top" src="{{ asset('images/stationeers-633d9efe5a2f4.jpg')}}" alt="#">
                </div>
                <div class="circle-img">
                    <img src="{{ asset('/images/' ~ user.Picture ) }}" alt="#">
                    {# <img src="{{ asset('images/' ~ user.Picture ) }}" alt="#"> #}
                </div>
                <div class="info-perso wit">
                    <p>Pseudo: {{user.username}}</p>
                    <p>Rôle: {{user.userRole}}</p>
                </div>
            </div>
        </div>
        <div class="bloc-desc-post">
            <div class="bloc-desc wit">
                <h3>Description</h3>
                <div class="description-perso wit">
                    <p>Bonjour! je suis quelqu'un de dynamique j'adore jouer au 
                        jeux vidéo et j'aime bien les animaux j'aime faire la 3D 
                        et partager mes réalisation ! et je crée aussi des jeux !</p>
                </div>
            </div>
            
            <!-- Les postes de l'utilisateur -->

            <div class="container-post-perso wit">
                <div class="post-h3">
                    <h3>Vos postes</h3>
                </div>
                <div class="card-post-top">
                    <div class="bloc-img-info">
                        <img src="{{ asset('images/stationeers-633d9efe5a2f4.jpg')}}" alt="#">
                        <div class="info-post">
                            <p class="marg">Titre: Zombitors</p>
                            <p class="marg">Date: 28/09/2022</p>
                            <div class="description-post">
                                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Cupiditate quibusdam magni quas 
                                 aspernatur dicta ad harum quidem nobis sint perspiciatis,
                                 aperiam assumenda, ipsa ea sequi cum dolores pariatur praesentium</p>
                                <a href="">Voir plus</a>
                            </div>
                        </div>
                    </div>
                    <div class="icon-post">
                        <icon>j'aime</icon>
                        <icon>commentaire</icon>
                    </div>
                </div>

                <div class="card-post-bot">
                    <div class="bloc-img-info">
                        <img src="{{ asset('images/stationeers-633d9efe5a2f4.jpg')}}" alt="#">
                        <div class="info-post">
                            <p class="marg">Titre: Zombitors</p>
                            <p class="marg">Date: 28/09/2022</p>
                            <div class="description-post">
                                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Cupiditate quibusdam magni quas 
                                 aspernatur dicta ad harum quidem nobis sint perspiciatis,
                                 aperiam assumenda, ipsa ea sequi cum dolores pariatur praesentium</p>
                                <a href="">Voir plus</a>
                            </div>
                        </div>
                    </div>
                
                    <div class="icon-post">
                        <p>j'aime</p>
                        <p>commentaire</p>
                    </div>
                </div>
            </div>
        </div>
           <!-- nos onglet trophée-->

        <div class="container-trophy wit">
            <div class="troph">
                <h3>Trophée</h3>
                <div class="bloc-trophy">
                <!-- icon (Font Awesome icon) -->
                    <i class="fa-sharp fa-solid fa-headset"></i>
                    <i class="fa-sharp fa-solid fa-dice-d20"></i>
                    <i class="fa-sharp fa-solid fa-book-skull"></i>
                    <i class="fa-sharp fa-solid fa-hand-fist"></i>
                    <i class="fa-sharp fa-solid fa-hat-wizard"></i>
                
                </div>
            </div>  
        </div>      
    </section>   
</main>

{% endblock %}